{
  "name": "@graphql-docs/generator",
  "version": "0.1.0",
  "description": "GraphQL Operation-First Documentation Generator",
  "keywords": [
    "graphql",
    "documentation",
    "generator",
    "docusaurus",
    "mdx",
    "api-docs"
  ],
  "author": "Austin Zani",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./docusaurus": {
      "import": "./dist/docusaurus.js",
      "require": "./dist/docusaurus.cjs"
    }
  },
  "bin": {
    "graphql-docs": "./dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:e2e": "vitest run src/test/e2e.test.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^8.1.7",
    "@graphql-tools/load": "^8.1.6",
    "@graphql-tools/schema": "^10.0.29",
    "@graphql-tools/url-loader": "^9.0.4",
    "ajv": "^8.12.0",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.0",
    "graphql": "^16.12.0",
    "graphql-config": "^5.0.0",
    "handlebars": "^4.7.8",
    "ora": "^8.2.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
